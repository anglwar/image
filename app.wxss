page {
  background-color: #f6f7fb;
}

.container {
  padding: 16rpx 24rpx 120rpx 24rpx;
}

.card {
  background: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.04);
  padding: 24rpx;
}

.row {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.space-between {
  justify-content: space-between;
}

.muted {
  color: #8c8c8c;
}

.title {
  font-size: 32rpx;
  font-weight: 600;
}

.btn-primary {
  background: #1677ff;
  color: #fff;
  padding: 20rpx 28rpx;
  border-radius: 12rpx;
}

.btn-outline {
  background: #fff;
  color: #1677ff;
  border: 2rpx solid #1677ff;
  padding: 18rpx 26rpx;
  border-radius: 12rpx;
}

.gap-16 { gap: 16rpx; }
.gap-24 { gap: 24rpx; }
.gap-32 { gap: 32rpx; }

